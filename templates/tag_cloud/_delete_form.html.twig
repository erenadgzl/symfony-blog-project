<form method="post" action="{{ path('tag_cloud_delete', {'id': tag_cloud.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tag_cloud.id) }}">
    <button class="btn btn-sm btn-danger">Delete</button>
</form>
