<!-- s-content
================================================== -->
<section class="s-content">

    <div class="row entries-wrap wide">
        <div class="entries">
            {% for post in posts %}
                <article class="col-block">

                    <div class="item-entry" data-aos="zoom-in">
                        <div class="item-entry__thumb">
                            <a href="{{ path('post',{'id': post.id}) }}" class="item-entry__thumb-link">
                                <img src="{{ post.shortcontent }}"
                                     srcset="{{ post.shortcontent }} 1x, {{ post.shortcontent }} 2x" alt="">
                            </a>
                        </div>

                        <div class="item-entry__text">
                            <div class="item-entry__cat">
                                <a href="{{ path('kategori',{'id': post.category.id,'page':1}) }}">{{ post.category }}</a>
                            </div>

                            <h1 class="item-entry__title"><a href="{{ path('post',{'id': post.id}) }}">{{ post.title }}</a></h1>

                            <div class="item-entry__date">
                                <a>{{ post.createdat|date("m/d/Y") }}</a>
                            </div>
                        </div>
                    </div> <!-- item-entry -->

                </article> <!-- end article -->
            {% endfor %}



        </div> <!-- end entries -->
    </div> <!-- end entries-wrap -->

    <div class="row pagination-wrap">
        <div class="col-full">
            <nav class="pgn" data-aos="fade-up">
                <ul>
                    {% for i in 0..((postsayisi/12)|round(0, 'floor')) %}
                    <li><a class="pgn__num" href="{{ path('pagesAction',{'page': i+1}) }}">{{ i+1 }}</a></li>
                    {% endfor %}
                </ul>
            </nav>
        </div>
    </div>

</section> <!-- end s-content -->
