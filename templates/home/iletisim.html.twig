{% extends 'frontend.html.twig' %}

{% block description %}{{ data.description }}{% endblock %}
{% block keywords %}{{ data.keywords }}{% endblock %}
{% block title %}{{ data.title }} İletişim{% endblock %}


{% block content %}
    <section class="s-content s-content--top-padding s-content--narrow">

        <div class="row narrow">
            <div class="col-full s-content__header">
                <h1 class="display-1 display-1--with-line-sep">Contact Us.</h1>
                {{ data.contanctus|raw }}
            </div>
        </div>

        <div class="row">
            <div class="col-full s-content__main">
                <p>
                    <img src="/frontend/images/thumbs/contact/contact-1000.jpg" srcset="/frontend/images/thumbs/contact/contact-2000.jpg 2000w,
                             /frontend/images/thumbs/contact/contact-1000.jpg 1000w,
                             /frontend/images/thumbs/contact/contact-500.jpg 500w" sizes="(max-width: 2000px) 100vw, 2000px" alt="">
                </p>

                <div class="row">


                    <div class="col-six tab-full">
                        <h4>Contact Info</h4>

                        <p>email:{{ data.email }}<br>
                            tel:{{ data.telno }}
                        </p>

                    </div>
                </div>


                <h4>Get In Touch</h4>
                <form name="cForm" id="cForm" class="contact-form" method="post" action="{{ path('iletisim') }}">
                    <fieldset>

                        <div>
                            <input name="contactusmessage[name]" id="cName" class="full-width" placeholder="Your Name*" value="" type="text">
                        </div>

                        <div class="form-field">
                            <input name="contactusmessage[email]" id="cEmail" class="full-width" placeholder="Your Email*" value="" type="text">
                        </div>

                        <div class="form-field">
                            <input name="contactusmessage[subject]" id="cWebsite" class="full-width" placeholder="Subject" value="" type="text">
                        </div>
                        <input name="contactusmessage[status]"  value="" type="hidden">
                        <div class="message form-field">
                            <textarea name="contactusmessage[message]" id="cMessage" class="full-width" placeholder="Your Message*"></textarea>
                        </div>

                        <button type="submit" class="submit btn btn--primary btn--large full-width">Send Message</button>

                    </fieldset>
                </form>


            </div> <!-- s-content__main -->
        </div> <!-- end row -->

    </section>
{% endblock %}
{% block extra %} {{ include('home/extra.html.twig') }} {% endblock %}
