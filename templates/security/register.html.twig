{% extends 'base.html.twig' %}


{% block title %}Register{% endblock %}
{% block stylesheets %}
    <style>
        .gotohome {
            background-color: #4CAF50; /* Green */
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin-left: 25% ;
            cursor: pointer;
            width: 46%;
        }
        form input{
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
        }

        button {
            width: 100%;
            background-color: #4CAF50;
            color: white;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        form button:hover {
            background-color: #45a049;
        }

        form div {
            border-radius: 5px;
            background-color: #f2f2f2;
            padding: 10px;
        }
        body{
            background-color: #ebebeb;
        }
        form {
            margin: auto;
            width: 50%;
            margin-top: 2%;
            padding: 10px;
        }
    </style>
{% endblock %}
{% block body %}

{{ form_start(form) }}
    <center><h1>Register</h1></center>
    {{ form_row(form.name) }}
    {{ form_row(form.email) }}
    {{ form_row(form.password.first) }}
    {{ form_row(form.password.second) }}

<button type="submit">Register!</button>
{{ form_end(form) }}
    <a style="background-color: #0f74a8" class="gotohome" href="{{ path('app_login') }}">
            Login Page
    </a>
    <a style="margin-top: 5px; background-color: #b5b5b5" class="gotohome" href="{{ path('home') }}">
        Go to Home Page
    </a>

{% endblock %}