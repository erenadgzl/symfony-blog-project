{% extends 'backend.html.twig' %}

{% block title %}Profil{% endblock %}

{% block body %}

    {% for user in user %}


        <form name="cForm" id="cForm" class="contact-form" method="post" action="">
            <fieldset>

                <div>
                    <input name="users[name]" id="cName" class="full-width" placeholder="Your Name*" value="{{ user.name }}" type="text">
                </div>

                <div class="form-field">
                    <input name="users[email]" id="cEmail" class="full-width" placeholder="Your Email*" value="{{ user.email }}" type="text">
                </div>

                <div class="form-field">
                    <input name="users[password]" id="cEmail" class="full-width" placeholder="Password*"  type="password">
                </div>
                <button type="submit" class="submit btn btn--primary btn--large full-width">Send Message</button>

            </fieldset>
        </form>
    {% endfor %}
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="btn btn-sm btn-success">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}

{% endblock %}
