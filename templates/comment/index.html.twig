{% extends 'backend.html.twig' %}

{% block title %}Comment index{% endblock %}

{% block body %}
    <h1>Comment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Comment</th>
                <th>User</th>
                <th>Post</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.comment }}</td>
                <td>{{ comment.user }}</td>
                <td>{{ comment.post }}</td>
                <td>{{ comment.status ? 'Yes' : 'No' }}</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="{{ path('comment_show', {'id': comment.id}) }}">show</a>
                    <a class="btn btn-sm btn-warning" href="{{ path('comment_edit', {'id': comment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-sm btn-success" href="{{ path('comment_new') }}">Create new</a>
{% endblock %}
