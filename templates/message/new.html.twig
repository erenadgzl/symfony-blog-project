{% extends 'backend.html.twig' %}

{% block title %}New Message{% endblock %}

{% block body %}
    <h1>Send Message</h1>

    <form method="post" >
        <input name="message[receiver]"  value="{{receiverid|number_format}}" type="hidden">
        <input name="message[sender]" id="cEmail"  value="{{ app.user.id }}" type="hidden">
        <input name="message[status]"  value="1" type="hidden">
        <div class="form-group row">
            <label for="username" class="col-4 col-form-label">Subject</label>
            <div class="col-8">
                <input id="username" name="message[subject]" placeholder="Subject" class="form-control here" type="text">
            </div>
        </div>

        <div class="form-group row">
            <label for="publicinfo" class="col-4 col-form-label">Message</label>
            <div class="col-8">
                <textarea placeholder="Your Message" id="publicinfo" name="message[message]" cols="40" rows="4" class="form-control"></textarea>
            </div>
        </div>

        <div class="form-group row">
            <div class="offset-4 col-8">
                <button name="submit" type="submit" class="btn btn-primary">Send message</button>
            </div>
        </div>
    </form>

    <a class="btn btn-sm btn-default" href="{{ path('message_index') }}">back to list</a>
{% endblock %}
