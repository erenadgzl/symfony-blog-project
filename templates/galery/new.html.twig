{% extends 'backend.html.twig' %}

{% block title %}New Galery{% endblock %}

{% block body %}
    <h1>Create new Galery</h1>

    <form action="{{ path('galery_new') }}" method="post" enctype="multipart/form-data">
        <input placeholder="Galery Number" name="galery[part]"  type="number"><br>Slider:
        <select  name='galery[slider]'>
            <option value='0'>False</option>
            <option value='1'>True</option>
        </select><br>
        Select image to upload:
        <input type="file" name="imagename" id="fileToUpload">
        <input type="submit" value="Upload Image" name="submit">
    </form>

    <a class="btn btn-sm btn-default"  href="{{ path('galery_index') }}">back to list</a>
{% endblock %}
