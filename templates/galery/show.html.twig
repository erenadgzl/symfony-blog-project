{% extends 'backend.html.twig' %}

{% block title %}Galery{% endblock %}

{% block body %}
    <h1>Galery</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ galery.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td><img style="max-height: 1200px;max-width: 800px" src="{{  asset('uploads') }}/images/{{ galery.name }}"></td>
            </tr>
            <tr>
                <th>Part</th>
                <td>{{ galery.part }}</td>
            </tr>
            <tr>
                <th>Slider</th>
                <td>{{ galery.slider ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-sm btn-default" href="{{ path('galery_index') }}">back to list</a>

    <a class="btn btn-sm btn-warning" href="{{ path('galery_edit', {'id': galery.id}) }}">edit</a>

    {{ include('galery/_delete_form.html.twig') }}
{% endblock %}
