{% extends 'backend.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Category index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Parent</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>{% if category.parentid==0 %}
                        ANA KATEGORÄ°
                    {% else %}
                        {% for categoryy in categories %}
                            {% if categoryy.id==category.parentid %}
                                {{ categoryy.name }}

                            {% endif %}
                        {% endfor %}
                    {% endif %}</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="{{ path('category_show', {'id': category.id}) }}">show</a>
                    <a class="btn btn-sm btn-warning" href="{{ path('category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-sm btn-success" href="{{ path('category_new') }}">Create new</a>
{% endblock %}
